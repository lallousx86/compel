/*
  CRT functions test #3

  Demonstrates GotoXy and TextAttr functions
*/

var $maxY 10
var $y 1
var $x 1
var $i
var $delay 10
var $color 0

var $colors.
var $colors.0 1
var $colors.1 2
var $colors.2 4
var $colors.3 11
var $colors.4 12

var $color 0

for $i 1 to 3
{
    for $y 1 to $maxY
    {
      if_gt $color 4 assign $color 0
      add $x 1
      textattr $colors.$color
      add $color 1
      delay $delay
      gotoxy $x $y
      echo "*"
    }

    for $y $y downto 0
    {
      echo "*"
      add $x 1
      delay $delay
      gotoxy $x $y
    }
}
textattr 0xF
assign $y 1
for $x 1 to $x
{
  gotoxy $x $y
  echo "*"
  delay $delay
}

expr $y $maxY + 2

for $x 0 to $x
{
  gotoxy $x $y
  echo "*"
  delay $delay
}

expr $y $maxY + 4
gotoxy 0 $y

echo "\npress any key..."
getch
clrscr
end
